{
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,  // Ensure emitted files are generated
    "module": "ESNext",  // Enable support for ES modules
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",  // For React 17+ JSX syntax
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",  // Base path for resolving modules
    "types": ["node", "vite/client"],  // Include Node.js types and Vite types
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    "rootDir": ".",  // Set rootDir to the root of your project
    "outDir": "./dist",  // Specify where the compiled JS files will go
    "resolveJsonModule": true  // If you need to import JSON files as modules
  },
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ]
}




